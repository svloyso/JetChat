# Routes

GET         /webSocket                                     controllers.Application.webSocket(login: String)
GET         /json/user                                     controllers.Application.getUser(login: String)
GET         /json/user/:userId/groups                      controllers.Application.getGroups(userId: Long)
GET         /json/user/:userId/topics                      controllers.Application.getAllTopics(userId: Long)
GET         /json/user/:userId/topics/:groupId             controllers.Application.getGroupTopics(userId: Long, groupId: Long)
GET         /json/user/:userId/messages/:topicId           controllers.Application.getMessages(userId: Long, topicId: Long)

GET         /json/user/:fromUserId/direct/:toUserId        controllers.Application.getDirectMessages(fromUserId: Long, toUserId: Long)

POST        /json/topic/add                                controllers.Application.addTopic
POST        /json/comment/add                              controllers.Application.addComment
POST        /json/group/add                                controllers.Application.addGroup
POST        /json/direct/add                               controllers.Application.addDirectMessage

GET         /logout                                        controllers.Application.logout

GET         /auth/callback                                 controllers.Auth.callback(code: Option[String], state: Option[String])

GET         /assets/*file                                  controllers.Assets.at(path="/public", file)

GET         /                                              controllers.Application.index
